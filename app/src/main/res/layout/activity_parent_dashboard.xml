<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.ParentDashboard"
    android:background="@color/gray">
    <RelativeLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:text="Logout"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/welcomeMessg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/headerBar"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <RelativeLayout
        android:id="@+id/component"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/welcomeMessg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/gray">
        <RelativeLayout
            android:id="@+id/Iframe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/marks"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/stdshape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:drawableTop="@drawable/ic_baseline_school_24"
                    android:text="View Marks"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/AcademicBtn"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/marks"
                android:layout_marginTop="21sp"
                android:background="@drawable/accshape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:drawableTop="@drawable/ic_baseline_school_24"
                    android:text="Helplines"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>